## Build prompt
User=$(whoami)
Host=$(uname -n)
Kernel=$(uname -r)
Cpu=$(cat /proc/cpuinfo | grep "model name" | uniq | cut -d':' -f2)
Arch=$(uname -m)

RPROMPT=""
PROMPT="[%{$fg[yellow]%}${User}@%{$fg[blue]%}${Host} %{$fg[green]%]%~%{$reset_color%}]%# "
