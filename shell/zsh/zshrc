# fancy screen formatting
echo -ne "$(build_arch_art)<sep>$(build_stat_widget)<sep><sep>$(build_fortune_widget | fmt -w ${term_width} -s)<sep><sep><sep>" | python ${base}/gen_screen.py -m ${term_width} -c 30 -r 2 -t 2 -l 3 -s "<sep>"

