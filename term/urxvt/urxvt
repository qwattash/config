! urxvt config section
!--------------------------------------------

! geometry
URxvt.geometry: 180x50

! scroll bar
URxvt.scrollBar: false
URxvt.saveLines: 4096
URxvt.scrollTtyOutput: false
URxvt.secondaryScroll: true
URxvt.scrollTtyKeypress: true
URxvt.scrollWithBuffer: true
URxvt.jumpScroll: true

! additional settings
URxvt.internalBorder: 0
URxvt.loginShell: true
URxvt.pointerBlank: true
URxvt*urlLauncher: /usr/bin/firefox


! Font
! XFT font settings
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: true
Xft.hintstyle: hintslight
!Xft*hintstyle: hintfull

! urxvt font
! use smaller geometry for this

! ----- ttf-anonymous-pro minus
!URxvt.font: xft:anonymous pro minus:medium:pixelsize=12
!URxvt.boldFont: xft:anonymous pro B minus:medium:pixelsize=12
!URxvt.letterSpace: 1

! ----- ttf-anonymous-pro normal
URxvt.font: xft:anonymous pro:pixelsize=12
URxvt.boldFont: xft:anonymous pro:bold:pixelsize=12
URxvt.italicFont: xft:anonymous pro:italic:pixelsize=12
URxvt.bolditalicFont: xft:anonymous pro:bold italic:pixelsize=12
URxvt.letterSpace: 1

! ----- monospace
!URxvt.font: xft:Monospace:medium:pixelsize=11
!URxvt.boldFont: xft:Monospace-Bold:medium:pixelsize=11

! ----- ttf-agave
!URxvt.font: xft:agave:pixelsize=12
!URxvt.letterSpace: -1

! ----- ttf-liberation
!URxvt.font: xft:Liberation Mono:pixelsize=12
!URxvt.letterSpace: -1

! ----- ttf-inconsolata-g
!URxvt.font: xft:Inconsolata\\-g:pixelsize=12

! ---- some other fonts found around
! *font: -*-terminus-medium-*-*-*-17-120-*-*-*-*-iso10646-1
! *font: -*-proggyclean-*-*-*-*-*-80-*-*-*-*-*-*


! perl extensions
URxvt.perl-ext: 
URxvt.perl-ext-common: default,selection-to-clipboard

!URxvt.perl-ext-common: clipboard
! clipboard config
!URxvt.keysym.M-c: perl:clipboard:copy
!URxvt.keysym.M-v: perl:clipboard:paste
!URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
!URxvt.clipboard.autocopy: true
